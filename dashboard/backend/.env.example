# Dashboard Backend Environment Variables
# Copy this file to .env and fill in the values

# GCP Configuration
GCP_PROJECT=your-project-id
GCS_BUCKET_NAME=your-project-id-book-images
VERTEX_AI_LOCATION=europe-west1

# Firebase Configuration
# Note: Service account key should be in service-account-key.json
# FIREBASE_SERVICE_ACCOUNT_KEY_PATH=../../service-account-key.json

# API Keys (store in Google Secret Manager for production)
# Optional, but recommended for better data quality. The app will not crash if this is missing.
GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# The Condition Assessor Agent is triggered internally via Firestore events.
# The CONDITION_AGENT_URL environment variable is therefore no longer required.

# Rate Limiting (Flask-Limiter)
RATELIMIT_STORAGE_URL=memory://  # Use redis:// in production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
ENABLE_STRUCTURED_LOGGING=true

# User LLM Manager
LLM_MANAGER_ENABLED=true
ENCRYPTION_KEY=  # Auto-generated from Secret Manager

# Environment
ENVIRONMENT=development  # development, alpha, production
PORT=8080