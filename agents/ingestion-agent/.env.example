# Ingestion Agent Environment Variables
# Copy this file to .env.yaml for Cloud Functions deployment

# GCP Configuration
GCP_PROJECT=your-project-id
GCP_LOCATION=europe-west1

# Gemini Models
GEMINI_MODEL=gemini-2.5-pro
GEMINI_VISION_MODEL=gemini-2.5-pro
GEMINI_RESEARCH_MODEL=gemini-2.5-pro

# API Keys (store in Google Secret Manager for production)
# Optional, but recommended for better data quality. The app will not crash if this is missing.
GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# Multi-Source Configuration
ENABLE_OPENLIBRARY=true
ENABLE_PARALLEL_APIS=true
OPENLIBRARY_RATE_LIMIT=1.0
MULTI_SOURCE_TIMEOUT=30

# Feature Flags
USE_ENHANCED_RESEARCH=true
MIN_CONFIDENCE_THRESHOLD=0.6
LLM_MANAGER_ENABLED=true

# Logging
LOG_LEVEL=INFO
ENABLE_CLOUD_LOGGING=true

# Environment
ENVIRONMENT=development  # development, alpha, production